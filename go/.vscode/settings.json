{
    "go.gopath": "${workspaceRoot}/.go",
    "go.testOnSave": false,
    "go.testFlags": [
        "-bench",
        "."
    ],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.go/**": true,
    },
    "editor.renderWhitespace": "all",
    "go.lintTool": "golint",
    "go.lintOnSave": "package"
}